@page "/category/{id:long}"
<div class="container">
    <div class="d-flex justify-content-between">
        <div class="p-2"><Button Type="ButtonType.Link" To="@newNoteLink" Color="Color.Primary" Outline="true"><small><span class="oi oi-plus" aria-hidden="true"></span><b> New</b></small></Button></div>        
    </div>
    @if (currentCategory == null)
    {
        <p><b>Loading...</b></p>
    }
    else
    {
        notes = currentCategory.Notes;
        <div class="row"><CardComponent NotesToDisplay="notes" /></div>
    }    
</div>

